source 'http://www.rubygems.org'
# The released xmppr4 gem is quite dated, and has bugs
gem 'xmpp4r', :git => "https://github.com/whitehat101/xmpp4r.git", :platforms => :ruby
gem 'smackr', '0.0.6', :git => "https://github.com/LegionSB/smackr.git", :platforms => :jruby
gem 'tinder' # Campfire
gem 'daemons'

# Plugins
gem 'twss'
gem 'nokogiri'
gem 'tzinfo'
gem 'em-timers', :git => "https://github.com/g1nn13/em-timers.git"
gem 'barometer'
gem 'ruby-hackernews'
gem 'amatch', :platforms => :ruby

group :development do
  gem 'pry'
end

group :test do
  gem 'rspec'
  gem 'timecop'
end
